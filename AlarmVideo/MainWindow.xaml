<platformcontrols:VideoOSWindow  xmlns:platformcontrols="clr-namespace:VideoOS.Platform.UI.Controls;assembly=VideoOS.Platform" x:Class="AlarmVideo.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:platformclient="clr-namespace:VideoOS.Platform.Client;assembly=VideoOS.Platform" Title="Alarm System" Height="597" Width="1446">
    <Grid Height="704" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="550"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="alarmDetailsTextBox" FontSize="14" BorderBrush="Black" BorderThickness="1" Padding="10" FontFamily="Consolas" Margin="0,431,57,0" Grid.Column="1" Grid.RowSpan="2" HorizontalAlignment="Right" Width="418" Height="81" VerticalAlignment="Top"/>
        <Button x:Name="acceptAlarmsButton" Content="Aktseepteri" Click="acceptAlarmsButton_Click" Margin="0,405,110,0" HorizontalAlignment="Right" Width="130" Height="22" VerticalAlignment="Top"/>
        <Button x:Name="AddEventUpdateAlarmsButton" Content="Loo sundmus/uuenda" Click="EventAlarmsButton_Click" Margin="0,457,110,0" Width="130" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" RenderTransformOrigin="0.646,0.794"/>
        <Button x:Name="WrongAlarmButton" Content="Vale Alarm" Click="WrongAlarmButton_Click" Margin="0,405,500,81" Grid.ColumnSpan="2" Width="130" HorizontalAlignment="Right"/>
        <Button x:Name="AlarmRequestButton" Content="Tee Alarmist valjavotte" Click="AlarmRequestButton_Click" Grid.Row="1" Margin="0,18,500,0" Grid.ColumnSpan="2" Width="130" RenderTransformOrigin="0.514,0.416" Height="21" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <Button x:Name="SendVideoButton" Content="Saada videoseinale" Click="SendVideoButton_Click" Margin="0,462,491,0" Grid.ColumnSpan="2" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Width="139"/>
        <Button x:Name="AddEventAlarmsButton" Content="Lisa sundmusele" Click="EventAlarmsButton_Click" Grid.Column="0" Margin="0,497,110,0" Width="130" Height="18" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.RowSpan="2"/>
        <Button x:Name="AlarmClosedButton" Content="Alarm lopetatud" Click="AlarmClosedButton_Click" Grid.Row="1" Grid.Column="0" Margin="0,21,110,0" Width="130" HorizontalAlignment="Right" Height="18" VerticalAlignment="Top"/>
        <Button x:Name="AddButton" Content="Lisa" Click="AddButton_Click" Grid.Row="1" Grid.Column="1" Margin="0,0,33,160" Width="130" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
        <ListBox x:Name="alarmsListBox" Grid.Column="1" Margin="0,0,-621,110" FontSize="14" SelectionMode="Single" HorizontalAlignment="Right" Width="544" Height="302" VerticalAlignment="Bottom">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding AlarmType}" FontWeight="Bold" Margin="0 0 10 0"/>
                        <TextBlock Text="{Binding TimeStamp}" FontSize="12" Margin="0 0 10 0"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox x:Name="EventListBox" Grid.Column="1" Margin="0,411,-392,0" FontSize="14" SelectionMode="Single" Height="95" VerticalAlignment="Top" HorizontalAlignment="Right" Width="315">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding AlarmType}" FontWeight="Bold" Margin="0 0 10 0"/>
                        <TextBlock Text="{Binding TimeStamp}" FontSize="12" Margin="0 0 10 0"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="ActiveAlarms" Content="Aktiivsed alarmid" Click="ActiveAlarms_Click" Grid.Column="1" Margin="627,68,-172,418" />
        <Button x:Name="WorkAlarms" Content="Toos alarmid" Click="WorkAlarms_Click" Grid.Column="1" Margin="736,68,-280,417"/>
        <Button x:Name="ClosedAlarms" Content="Suletud alarmid" Click="ClosedAlarms_Click" Grid.Column="1" Margin="864,68,-420,418"/>
        <Button x:Name="MyAlarms" Content="Minu alarmid" Click="MyAlarms_Click" Grid.Column="1" Margin="987,68,-533,420"/>
        <Button x:Name="AllAlarms" Content="Koik" Click="AllAlarms_Click" Grid.Column="1" Margin="1106,68,-621,419" RenderTransformOrigin="0.253,1.463"/>

        <platformclient:ImageViewerWpfControl x:Name="_imageViewerWpfControl1" Margin="30,36,159,153" EnableMousePtzEmbeddedHandler="True"
                                                          MaintainImageAspectRatio="True" EnableVisibleTimestamp="True"
                                                          ImageOrPaintInfoChanged="ImageOrPaintChangedHandler" Grid.ColumnSpan="2"/>
        <platformcontrols:VideoOSButtonPrimarySmall x:Name="buttonSelect1" Click="Button_Select1_Click" Margin="0,0,172,110" HorizontalAlignment="Right" Width="243" Height="29" VerticalAlignment="Bottom" Grid.Column="1">Vali Kaamera</platformcontrols:VideoOSButtonPrimarySmall>
        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,189,-48,194" HorizontalAlignment="Right" Width="172">
            <platformcontrols:VideoOSCheckBoxSmall x:Name="checkBoxHeader" Margin="5" Checked="checkBoxHeader_Checked" Unchecked="CheckBoxHeader_Unchecked">Naita paist</platformcontrols:VideoOSCheckBoxSmall>
            <platformcontrols:VideoOSCheckBoxSmall x:Name="checkBoxDigitalZoom" Margin="5" Checked="checkBoxDigitalZoom_Checked" Unchecked="CheckBoxDigitalZoom_Unchecked">Digitaalne suum</platformcontrols:VideoOSCheckBoxSmall>
            <platformcontrols:VideoOSCheckBoxSmall x:Name="checkBoxAdaptiveStreaming" Margin="5" Checked="checkBoxAdaptiveStreaming_Checked" Unchecked="CheckBoxAdaptiveStreaming_Unchecked">Adaptiivne voogesitus</platformcontrols:VideoOSCheckBoxSmall>
        </StackPanel>
    </Grid>


</platformcontrols:VideoOSWindow>