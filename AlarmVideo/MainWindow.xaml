                                 xmlns:platformclient="clr-namespace:VideoOS.Platform.Client;assembly=VideoOS.Platform" Title="Alarm System" Height="802" Width="1445">
    <Grid Margin="10,0,-43,-164" RenderTransformOrigin="0.5,0.5">
